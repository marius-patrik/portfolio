# JWT Configuration
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-secret-key-change-this-in-production

# Database Configuration
# Use :memory: for development (data lost on restart)
# Use ./phonebooth.db for persistent file-based storage
# Use absolute path like C:/data/phonebooth.db for custom location
DATABASE_PATH=:memory:

# SMTP Email Configuration (optional - emails logged to console if not set)
# For Gmail: Use app password from https://myaccount.google.com/apppasswords
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=Phonebooth <noreply@phonebooth.app>

# For SendGrid:

