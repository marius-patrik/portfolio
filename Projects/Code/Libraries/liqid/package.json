{
  "name": "liqid",
  "version": "0.1.0",
  "description": "Liqid design system - bundle package containing liqid-components and liqid-ui",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    },
    "./components": {
      "import": "./liqid-components/dist/esm/index.js",
      "types": "./liqid-components/dist/index.d.ts"
    },
    "./ui": {
      "import": "./liqid-ui/dist/esm/index.js",
      "types": "./liqid-ui/dist/index.d.ts"
    },
    "./styles.css": "./liqid-components/dist/esm/index.css"
  },
  "scripts": {
    "build": "npm run build --workspace=liqid-components && npm run build --workspace=liqid-ui",
    "dev": "npm run dev --workspace=liqid-components & npm run dev --workspace=liqid-ui",
    "lint": "npm run lint --workspaces --if-present"
  },
  "workspaces": [
    "liqid-components",
    "liqid-ui"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "glassmorphism",
    "liqid"
  ],
  "license": "MIT"
}

