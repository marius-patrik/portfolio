{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Squash All Repos",
      "type": "shell",
      "command": "./squash_all.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Push All Repos",
      "type": "shell",
      "command": "./push_all.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start Liqid Components",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/libraries/liqid/liqid-components"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "presentation": {
        "group": "libraries"
      }
    },
    {
      "label": "Start Liqid UI",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/libraries/liqid/liqid-ui"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "presentation": {
        "group": "libraries"
      }
    },
    {
      "label": "Start All Libraries",
      "dependsOn": ["Start Liqid Components", "Start Liqid UI"],
      "problemMatcher": [],
      "presentation": {
        "group": "libraries"
      }
    },
    {
      "label": "Start Docs",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/liqid-docs"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "presentation": {
        "group": "apps"
      }
    },
    {
      "label": "Start Showcase",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/liqid-showcase"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "presentation": {
        "group": "apps"
      }
    },
    {
      "label": "Start All Apps",
      "dependsOn": ["Start Docs", "Start Showcase"],
      "problemMatcher": [],
      "presentation": {
        "group": "apps"
      }
    },
    {
      "label": "Start Everything",
      "dependsOn": ["Start All Libraries", "Start All Apps"],
      "problemMatcher": [],
      "presentation": {
        "group": "all"
      }
    }
  ]
}
