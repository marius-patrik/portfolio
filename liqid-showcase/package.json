{
  "name": "liqid-showcase",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rsbuild build",
    "check": "biome check --write",
    "dev": "npm run dev:all",
    "dev:core": "concurrently --kill-others-on-fail \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "rsbuild dev --open",
    "dev:backend": "tsx watch ./src/server/index.ts",
    "dev:phonebooth": "cd src/components/Apps/phonebooth && concurrently --kill-others-on-fail \"cd client && npm run dev\" \"cd server && npm run dev\"",
    "dev:tradebot": "cd src/components/Apps/tradebot && npm run dev",
    "dev:pokedex": "cd src/components/Apps/pokedex && npm run dev",
    "dev:all": "concurrently --kill-others-on-fail \"npm run dev:core\" \"npm run dev:phonebooth\" \"npm run dev:tradebot\"",
    "format": "biome format --write",
    "preview": "rsbuild preview",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "biome check --write"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.35.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "kysely": "^0.28.8",
    "liqid-components": "file:../../libraries/liqid-components",
    "liqid-ui": "file:../../libraries/liqid-ui",
    "nodemailer": "^7.0.11",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "swr": "^2.3.7",
    "wouter": "^3.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@rsbuild/core": "^1.6.12",
    "@rsbuild/plugin-react": "^1.4.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "gh-pages": "^6.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
